<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.body %></td>
      <td><%= link_to "Show", books_path %></td>
      <td><%= link_to "Edit", books_path %></td>
      <td><%= link_to "Delete", books_path %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
